<h1>Edit Product</h1>
<p>Use this form to change an item.</p>

<form class="editForm" method="POST" action="/products/{{product.id}}?_method=PUT">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" value="{{product.name}}">
    <label for="description">Description:</label>
    <input type="text" name="description" id="description" value="{{product.description}}">
    <label for="price">Price: </label>
    <input type="text" name="price" id="price" placeholder="{{product.price}}" value="{{product.price}}">
    <label for="inventory">Inventory:</label>
    <input type="text" name="inventory" id="inventory" placeholder="{{product.inventory}}"
        value="{{product.inventory}}">
    <span>
        <button type="submit">Submit</button>
        <button type="submit" formaction="/products/{{product.id}}?_method=DELETE">Delete</button>
        <button type="submit" formaction="/products" formmethod="GET">Cancel</button>
    </span>

</form>

{{#if error}}
{{> errors}}
{{/if}}