<h1>Edit Article</h1>
<p>Use this form to change an article.</p>

<form class="editForm" method="POST" action="/articles/{{article.URLTitle}}?_method=PUT">
    <label for="title">Title:</label>
    <input type="text" name="title" id="title" value="{{article.title}}">
    <label for="author">Author: </label>
    <input type="text" name="author" id="author" value="{{article.author}}">
    <label for="body">Content:</label>
    <textarea name="body" required>{{article.body}}</textarea>

    <span>
        <button type="submit">Submit</button>
        <button type="submit" formaction="/articles/{{article.URLTitle}}?_method=DELETE">Delete</button>
        <button type="submit" formaction="/articles" formmethod="GET">Cancel</button>
    </span>

</form>

{{#if error}}
{{> errors}}
{{/if}}